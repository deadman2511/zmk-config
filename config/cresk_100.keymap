#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

&sk {
    release-after-ms = <1000>;
    quick-release;
};

&sl {
    release-after-ms = <1000>;
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                                       &kp ESC    &kp C_MUTE
&kp Q      &kp W     &kp E    &kp R    &kp T         &kp Y        &kp U        &kp I     &kp O     &kp P
&kp A      &kp S     &kp D    &kp F    &kp G         &kp H        &kp J        &kp K     &kp L     &kp FSLH
&kp Z      &kp X     &kp C    &kp V    &kp B         &kp N        &kp M        &kp COMMA &kp DOT   &kp RET
           &kp LCTRL     &kp TAB                                                     &kp BSPC     &kp LALT
                              &sl 1    &kp SPACE     &kp LSHIFT   &kp SPACE
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN
                               &inc_dec_kp C_VOL_UP C_VOL_DN>;
        }
;
        lower_layer {
            bindings = <
                                       &trans        &trans
&kp N1     &kp N2    &kp N3   &kp N4   &kp N5        &kp N6       &kp N7       &kp N8    &kp N9    &kp N0
&kp ESC    &kp SQT   &kp INS &kp BSPC &kp DOWN       &kp UP       &kp DEL      &kp END   &kp HOME  &kp SEMI
&kp GRAVE  &kp PG_UP &kp LBKT &kp RET  &kp LEFT      &kp RIGHT    &kp RBKT     &kp MINUS &kp EQUAL &kp BSLH
           &trans    &trans                                                    &trans    &trans
                              &sl 2    &trans        &sk LALT     &sk LWIN
            >;
        };

        function_layer {
            bindings = <
                                       &none         &none
&kp F1     &kp F2    &kp F3   &kp F4   &kp F5        &kp F6       &kp F7       &kp F8    &kp F9    &kp F10
&kp F11    &kp F12   &none    &kp BSPC &none         &none        &none        &none     &none     &none
&kp TILDE  &kp PG_DN &none    &kp RET  &none         &none        &none        &none     &none     &none
           &none     &none                                                     &none     &none
                              &none    &trans        &sk LS(LALT) &sk LC(LWIN)
            >;
        };
    };
};
